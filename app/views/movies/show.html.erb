<h1><%= @movie.title %></h1>
<h2><%= @movie.year %></h2>
<p><%= @movie.director %></h1>
<p><%= @movie.description %></p>
<p>Rating: <%= @movie.rating %>/10</p>
<h3>Reviews</h3>
<% @reviews.each do |review|%>
	<p><%= review.comment %></p>
	<p>Score:<%= review.score %>/10</p>
	<p><%= review.judgement %></p>
	<p><%= review.user%></p>
<% end %>

<button><%= link_to "Edit Movie", edit_movie_path(@movie) %></button>